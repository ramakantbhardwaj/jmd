<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:cardBackgroundColor="@color/registrationBG"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:elevation="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_4sdp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_design"
                android:text="design"
                android:fontFamily="@font/dmsansreg"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_4sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="start"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_sizes"
                android:layout_weight="1"
                android:text="size"
                android:fontFamily="@font/dmsansreg"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="start"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_col"
                android:layout_weight="1"
                android:text="color"
                android:fontFamily="@font/dmsansreg"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="start"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_pcs"
                android:text="pcs"
                android:fontFamily="@font/dmsansreg"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_4sdp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_rate"
                android:layout_weight="1"
                android:text="rate"
                android:fontFamily="@font/dmsansreg"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="start"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="visible"
                android:id="@+id/tv_delete"
                android:layout_weight=".4"
                android:fontFamily="@font/dmsansreg"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="start"
                android:background="@drawable/ic_delete_icon"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>